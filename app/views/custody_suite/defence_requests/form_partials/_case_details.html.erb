<%= f.text_field_input(:offences) %>

<%= f.form_group(:circumstances_of_arrest) do %>
  <% f.text_area :circumstances_of_arrest, label: t('circumstances_of_arrest'), rows: '5', class: 'text-field text-field-wide' %>
<% end %>

<%= f.radio_button_fieldset :fit_for_interview %>

<%= f.form_group(:unfit_for_interview_reason, class: "panel-indent", data: { "show-when" => "defence_request_fit_for_interview_false" } ) do %>
  <% f.text_area :unfit_for_interview_reason, rows: '5', class: 'text-field text-field-wide' %>
<% end %>

<%= f.text_field_input(:investigating_officer_name, optional: true) %>

<%= f.text_field_input(:investigating_officer_contact_number, optional: true) %>

<div class="form-group">
  <%= f.label :comments, class: "form-label-bold" do %>
    <%= label_text_for_form(attribute_name: "comments", optional: true) %>
    <aside><%= t("comments_field_aside_text") %></aside>
  <%- end %>
  <%= f.text_area :comments, label: t('comments'), rows: '5', class: 'text-field text-field-wide' %>
</div>
