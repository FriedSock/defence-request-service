<% content_for :javascript_includes do %>
  <%= javascript_include_tag "dashboard_poller" unless Settings.dsds.dashboard_refresh_disabled %>
<% end %>

<%= flash_messages %>

<h1><%= "#{t(@dashboard.user_role)}  #{t('dashboard')}" %></h1>

<% if policy(:defence_request).create? %>
  <div class="new_defence_request">
    <%= link_to t("new_defence_request"), new_defence_request_path, role: "button", class: "button" %>
  </div>
<% end %>

<% if @dashboard.user_role == "solicitor" %>
  <div class="tabs">
    <div class="active">
      <%= link_to t("active", count: @active_count), dashboard_path %>
    </div>
    <div class="closed">
      <%= link_to t("closed", count: @closed_count), dashboard_closed_path %>
    </div>
  </div>
<% end %>

<table class="dashboard">
  <%= render "defence_requests/defence_requests_table_head" %>
  <tbody>
  <%= render "defence_requests/defence_requests_table_body", requests: @dashboard.defence_requests %>
  </tbody>
</table>
