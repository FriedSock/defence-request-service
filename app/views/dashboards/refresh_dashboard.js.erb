<% if @dashboard.user_role == "solicitor" %>
    <% content = render "defence_requests/solicitor", requests: @dashboard.defence_requests %>
    $('section.defence-requests').replaceWith("<%= escape_javascript(content) %>");
<% else %>
    $('.dashboard tbody').html('');
    $('.dashboard tbody').append("<%= escape_javascript(render 'defence_requests/defence_requests_table_body', requests: @dashboard.defence_requests) %>");
<% end %>