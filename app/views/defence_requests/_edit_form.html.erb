<%= form_for(@defence_request) do |f| %>
  <%= render('defence_requests/form_partials/solicitor', f: f) if @policy.solicitor_details_edit? || @policy.solicitor_time_of_arrival? %>

  <%= render('defence_requests/form_partials/detainee', f: f) if @policy.detainee_details_edit? %>

  <%= render('defence_requests/form_partials/case', f: f) if @policy.case_details_edit? || @policy.dscc_number_edit?%>

  <%= render('defence_requests/form_partials/form_actions', f: f) %>
<% end %>


