<h3><%= t('case_details') %></h3>
<div class="case-details">
  <%= render('shared/date_time_form_part', attribute_name: :time_of_arrest, f: f) %>

  <%= render('shared/date_time_form_part', attribute_name: :time_of_arrival, f: f) if @policy.add_case_time_of_arrival? %>

  <%= render('shared/date_time_form_part', attribute_name: :time_of_detention_authorised, f: f) %>

  <%= render('shared/date_time_form_part', attribute_name: :interview_start_time, f: f) if @policy.interview_start_time_edit? %>

  <%= render('defence_requests/form_partials/case_details', f: f) if @policy.create? %>

  <div class="form-group">
    <%= f.label :dscc_number, t('dscc_number'), class: 'form-label-bold' %>
    <%= f.label :dscc_number, @defence_request.dscc_number %>
  </div>
</div>
