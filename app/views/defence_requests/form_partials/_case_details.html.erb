<div class="form-group">
  <%= f.label :offences, t('offences') %>
  <%= f.text_field :offences, class: 'text-field text-field-wide' %>
</div>

<div class="form-group">
  <%= f.label :circumstances_of_arrest, t('circumstances_of_arrest') %>
  <%= f.text_area :circumstances_of_arrest, label: t('circumstances_of_arrest'), rows: '5', class: 'text-field text-field-wide' %>
</div>

<div class="form-group">
  <fieldset class="inline">
    <%= f.fields_for :fit_for_interview, @defence_request_form.fields[:fit_for_interview] do |t| %>
      <%= t.label :fit_for_interview, t('fit_for_interview') %>
      <label class="block-label" for="defence_request_fit_for_interview_yes">
        <%= t.radio_button :fit_for_interview, :yes, name: 'defence_request[fit_for_interview][fit_for_interview]', class: 'fit_for_interview_radio' %>
        <%= t('yes') %>
      </label>
      <label class="block-label" for="defence_request_fit_for_interview_no">
        <%= t.radio_button :fit_for_interview, :no, name: 'defence_request[fit_for_interview][fit_for_interview]', class: 'fit_for_interview_radio' %>
        <%= t('no') %>
      </label>
    <% end %>
  </fieldset>
</div>

<div class="form-group hidden" id='scheme-field'>
  <%= f.label :scheme, t('scheme'), class: 'form-label-bold' %>
  <%= f.text_field :scheme, class: 'text-field text-field-wide' %>
</div>

<div class="form-group">
  <%= f.label :custody_number, t('custody_number') %>
  <%= f.text_field :custody_number, label: t('custody_number'), class: 'text-field custody-number' %>
</div>

<div class="form-group">
  <%= f.label :custody_address, t('custody_address') %>
  <%= f.text_field :custody_address, label: t('custody_address'), class: 'text-field custody-number' %>
</div>

<div class="form-group">
  <%= f.label :investigating_officer_name, t('investigating_officer_name') %>
  <%= f.text_field :investigating_officer_name, label: t('investigating_officer_name'), class: 'text-field custody-number' %>
</div>

<div class="form-group">
  <%= f.label :investigating_officer_shoulder_number, t('investigating_officer_shoulder_number') %>
  <%= f.text_field :investigating_officer_shoulder_number, label: t('investigating_officer_shoulder_number'), class: 'text-field custody-number' %>
</div>

<div class="form-group">
  <%= f.label :investigating_officer_contact_number, t('investigating_officer_contact_number') %>
  <%= f.text_field :investigating_officer_contact_number, label: t('investigating_officer_contact_number'), class: 'text-field custody-number' %>
</div>

<div class="form-group">
  <%= f.label :comments, t('comments') %>
  <%= f.text_area :comments, label: t('comments'), rows: '5', class: 'text-field text-field-wide' %>
</div>
