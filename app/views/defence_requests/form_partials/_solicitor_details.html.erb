<div class="form-group">
  <%= f.label :solicitor_name, t('full_name') %>
  <%= f.text_field :solicitor_name, disabled: !@policy.edit_solicitor_details?, class: 'text-field text-field-wide' %>
</div>

<div class="form-group">
  <%= f.label :solicitor_firm, t('name_of_firm') %>
  <%= f.text_field :solicitor_firm, disabled: !@policy.edit_solicitor_details?, class: 'text-field text-field-wide' %>
</div>

<div class="form-group">
  <%= f.fields_for :solicitor, @defence_request_form.fields[:solicitor], type: :hidden do |t| %>
    <%= t.text_field :email, type: :hidden %>
  <% end %>
</div>

<div class="form-group">
  <%= f.label :phone_number, t('telephone_number') %>
  <%= f.text_field :phone_number, disabled: !@policy.edit_solicitor_details?, class: 'text-field text-field-wide' %>
</div>
