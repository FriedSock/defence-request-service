<script>
  var appropriate_adult_true = function () {
    $('#defence_request_appropriate_adult_reason').removeAttr("disabled");
  }

  var appropriate_adult_false = function () {
    $('#defence_request_appropriate_adult_reason').attr("disabled", "disabled");
  }

  var adjust_form_for_appropriate_adult = function () {
    var appropriate_adult_yes_checked = ($("input[type='radio']#defence_request_appropriate_adult_appropriate_adult_yes:checked").length > 0);
    var appropriate_adult_no_checked = ($("input[type='radio']#defence_request_appropriate_adult_appropriate_adult_no:checked").length > 0);
    if (appropriate_adult_yes_checked) {
      appropriate_adult_true()
    } else if (appropriate_adult_no_checked) {
      appropriate_adult_false()
    }
  }

  $(".appropriate_adult_radio").change(adjust_form_for_appropriate_adult)
  adjust_form_for_appropriate_adult()
</script>
