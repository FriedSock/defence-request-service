<script>
  var interpreter_required_true = function () {
    $('#defence_request_interpreter_type').removeAttr("disabled");
  }

  var interpreter_required_false = function () {
    $('#defence_request_interpreter_type').val("");
    $('#defence_request_interpreter_type').attr("disabled", "disabled");
  }

  var adjust_form_for_interpreter = function () {
    var interpreter_required_yes_checked = ($("input[type='radio']#defence_request_interpreter_required_true:checked").length > 0);
    var interpreter_required_no_checked = ($("input[type='radio']#defence_request_interpreter_required_false:checked").length > 0);
    if (interpreter_required_yes_checked) {
      interpreter_required_true()
    } else if (interpreter_required_no_checked) {
      interpreter_required_false()
    }
  }

  $(".interpreter_required_radio").change(adjust_form_for_interpreter)
  adjust_form_for_interpreter()
</script>
