<script>
  //  detainee_name
  var detainee_name_not_given_true = function () {
    $('#defence_request_detainee_name').val("");
    $('#defence_request_detainee_name').removeAttr("disabled");
  }

  var detainee_name_not_given_false = function () {
    $('#defence_request_detainee_name').attr("disabled", "disabled");
  }

  var adjust_form_for_detainee_name_not_given = function () {
    var detainee_name_not_given_checked = ($("input[type='checkbox']#defence_request_detainee_name_not_given:checked").length > 0);
