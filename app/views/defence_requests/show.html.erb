<%= render "shared/error_and_flash", object: @defence_request_form %>

<%= link_to t("back_to_requests"), dashboard_path %>

<h1 class="detainee"><%= not_given_formatter(@defence_request, :detainee_name, "name_not_given") %></h1>
<% if @defence_request.dscc_number %>
  <h2 class="dscc"><%= t("dscc") %>: <%= @defence_request.dscc_number %></h2>
<% end %>

<% if @defence_request.aborted? %>
  <h1><%= t("case_aborted") %></h1>
  <p><%= @defence_request.reason_aborted %></p>
  <p><%= t("call_call_center") if user_has_role?("solicitor") %></p>
<% end %>

<section class="detainee-details">
  <%= render("defence_requests/show_partials/detainee_details") %>
</section>

<%= content_tag("div", class: "js-tabs cf", id: "edit-tabs", data: { activatefirst: "true" }) do %>
  <div class="tabs-nav">
    <ul class="cf tabs js-tabs-nav js-only">
      <li>
        <a href="#interview"><%= t("solicitor_attendance") %></a>
      </li>
      <li>
        <a href="#case-details"><%= t("case_details") %></a>
      </li>
    </ul>
  </div>
  <div class="js-tabs-content">
    <div id="interview">
      <%= render "defence_requests/show_partials/interview_tab" %>
    </div>
    <div id="case-details">
      <section class="detention-details">
        <h3 class="nonjs"><%= t("case_details")%></h3>
        <%= render "defence_requests/show_partials/detention_details" %>
      </section>
    </div>
  </div>
<% end %>

<% content_for :sidebar do %>
  <div class="<%= "status status-#{@defence_request.state_class}" %>">
    <h2>
      <%= @defence_request.state_text %>
      <span class="time"><i class="clock"></i><%= @defence_request.last_action_time %></span>
    </h2>
  </div>
<% end %>
