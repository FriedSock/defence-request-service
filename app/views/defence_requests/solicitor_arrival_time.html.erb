<%= render 'shared/error_and_flash', object: @defence_request_form  %>

<% if @policy.solicitor_time_of_arrival_from_show? %>
  <div class="time-of-arrival">
    <h1><%= t('arrival_time') %></h1>
    <%= form_for(@defence_request, url: defence_request_solicitor_arrival_time_path, method: :patch) do |f| %>
      <%= render("shared/date_time_form_part",
                 attribute: :solicitor_time_of_arrival,
                 show_label: false,
                 dates: [Day::TODAY, Day::TOMORROW, Day::DAY_AFTER_TOMORROW],
                 f: f) %>
      <%= link_to(t('arrival_time_cancel'), defence_request_path(@defence_request), class: 'button') %>
      <%= f.submit(t('arrival_time_save'), class: 'button') %>
    <% end %>
  </div>
<% end %>
