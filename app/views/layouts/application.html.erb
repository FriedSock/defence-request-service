<!DOCTYPE html>
<html>
<head>
  <title>DefenceSolicitor</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="main-content">
      <div class="col-md-12">
        <%= render 'shared/head' %>
        <%= render 'shared/phase_banner' %>
        <%= render 'shared/flash_messages' if flash.any? %>
        <% if is_dashboard? %>
          <%= render 'shared/dashboard' %>
        <% else %>
          <%= render 'shared/main_content' %>
        <% end %>
      </div>
  </div>
</body>
</html>
